<div class="card">
    <div class="card-header bg-dark">
        <h3 class="card-title text-white">
            <i class="far fa-image"></i> Carga una imagen
        </h3>
    </div>
    <div class="card-body">
        <form action="/images" method="POST" enctype="multipart/form-data">
            <div class="form-group">
                <div class="input group">
                    <div class="custom-file">
                        <input type="file" name="image" class="custome-file-input" id="inputGroupFile" aria-describedby="inputGroupFileAddon" required>
                           <label class="custom-file-label" for="inputGroupFile">Selecciona tu imágen</label> 
                        </div>
                    </div>
                </div>

            <div class="form-group">
                    <input type="text" name="title" class="form-control" placeholder="Titulo para la imagen" required>
                </div>
                <div class="form-group">
                    <textarea name="description" rows="2" class="form-control" placeholder="Descripción para la imagen"></textarea>
                </div>
               <div class="form-group">
                    <button class="btn btn-succes">
                    <i class="fas fa-upload"></i> Sube tu imagen
                </button>
               </div>
        </form>       
    </div>
</div>

<div class="card  mt-2">
    <div class="card-header bg-dark text-white">
        <h3><i class="far fa-images"></i> Subidas recientes</h3>
    </div>
    <div class="card-body">
        <div class="row">
            {{#each images}}
            <div class="col-md-4 text-center">
              <a href="/images/{{ uniqueId }}">
                  <img src="/public/upload/{{filename}}" alt="{{title}}" class="w-100 h-100 img-thumbnail">
              </a>
            </div>
            {{/each}}
        </div>
    </div>
</div>
